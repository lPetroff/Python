import random
class Enemy:
 loop=0
 repeat = 0
 loser=0
 while(loop == 0):
     if (repeat != 1):
         enemy1name = input("Enter the first name of hero :")
     if (enemy1name == ""):
         print("you need to choose a name")
     else:
            if (repeat != 1):
             enemy2name = input("Enter the second name of hero :")
            if (enemy2name == ""):
              print("You need to choose a name")
              while(enemy2name == ""):
                 enemy2name = input("Enter the second name of hero :")

              if (enemy1name == enemy2name):
                while (enemy1name == enemy2name):
                    print("You need to choose some different name")
                    enemy2name = input("Enter the second name of hero :")
                enemy1_life = 100
                enemy2_life = 100
                print("First hero is :", enemy1name, "\n[HP]:", enemy1_life, "==", "I" * int(enemy1_life / 2))
                print("Second hero is :", enemy2name, "\n[HP]:", enemy2_life, "==", "I" * int(enemy2_life / 2))
              else:
                 enemy1_life = 100
                 enemy2_life = 100
                 print("First hero is :", enemy1name, "\n[HP]:", enemy1_life, "==", "I" * int(enemy1_life / 2))
                 print("Second hero is :", enemy2name, "\n[HP]:", enemy2_life, "==", "I" * int(enemy2_life / 2))
            else:
                if (enemy1name == enemy2name):
                    while (enemy1name == enemy2name):
                     print("You need to choose some different name")
                     enemy2name = input("Enter the second name of hero :")
                    enemy1_life = 100
                    enemy2_life = 100
                    print("First hero is :", enemy1name, "\n[HP]:", enemy1_life, "==", "I" * int(enemy1_life / 2))
                    print("Second hero is :", enemy2name, "\n[HP]:", enemy2_life, "==", "I" * int(enemy2_life / 2))
